---
title: Fortnite - combos full page

pageClassName: p-combos
---
extends shared/_layout

block content
  div.body(class!= pageClassName)

    include components/common/_mainBanner
    include components/emotes/_emotes

    section.section
      .c-grid
        .section__wrapper
          .section__wrapper-left

            section#combo
              include ./components/combo/_combo-create
              include ./components/combo/_combo-skins

              include ./components/common/_pagination

          .section__wrapper-right(section-right-js)

            include components/common/_search
            include components/common/_sectionBanner
            include components/common/_latest
            include components/common/_sectionBanner
            include components/common/_top
            include components/common/_combos
            include components/common/_royal
            include components/common/_categories
