section#shop.shop

  .shop__bg
    .shop__bg-top(
      data-stellar-background-ratio="0.85"
      parallax-shop-bg-js
    )
    .shop__bg-bottom

  .c-grid
    .shop__wrapper
      .shop__row.shop__row-0
        h1.shop__title!= "Fortnite <span>Item Shop</span>"
        p.shop__desc!= "Check the current Fortnite Item Shop for featured & daily items. They are auto-updated daily at <span>00:00 UTC (Universal Time).</span>"

      .shop__row.shop__row-1

        h2.shop__category!= "<span>Browse by Categories</span>"

        .item__dropdown
          .dropdown
            a.dropdown__btn(href="#" class="" id="itemDropdownNav" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              div
                i.icon-png.outfit
              div
                p!= "Outfit"
                span!= "128"
              div
                span!= ">"
            div.dropdown-menu.dropdown-menu-right(aria-labelledby="itemDropdownNav")
              each val, idx in itemMenuArr
                if(idx > 0)
                  a.dropdown__link(href="#" class="" title="")
                    div
                      i.icon-png(class!= itemMenuArr[idx].iconName)
                    div
                      p!= itemMenuArr[idx].name
                      span!= itemMenuArr[idx].indCount

        .item__nav
          .item__nav-bg
          .item__nav-wrapper

            each val, idx in itemMenuArr
              a.item__nav-btn(href="#" class= (idx === 0) ? 'is-active': '' title="")
                div
                  i.icon-png(class!= itemMenuArr[idx].iconName)
                  span!= itemMenuArr[idx].indCount
                div
                  p!= itemMenuArr[idx].name

      .shop__row.shop__row-2
        .rotation__cost
          .rotation__cost-bg
            span
            span

          .rotation__cost-left
            img(src="./img/img-rotation-cost.png" srcset="./img/img-rotation-cost@2x.png 2x" alt="" title="")

          .rotation__cost-right
            span!= "Cost:"
            p!= "10,700"

        .shop__update
          .shop__update-bg
            span
            span

          .shop__update-left
            img(src="./img/img-shop-update.png" srcset="./img/img-shop-update@2x.png 2x" alt="" title="")

          .shop__update-right
            span!= "Update Shop:"
            p!= "00:40:31"

// SECTION shop :: END