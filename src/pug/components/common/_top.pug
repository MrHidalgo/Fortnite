      desc: 'Lorem ipsum dolor sit ue nibh vivamus ten.'
    }
  ];

section#top.top

  .top__figure
    img(src="./img/img-top-figure-0.svg" alt="" title="")
    img(src="./img/img-top-figure-1.svg" alt="" title="")

  .top__title
    p!= "Top 5 Skins"

  .top__wrapper
    .top__block-wrapper

      each val, idx in topData
        .top__block(class!= 'top__block-' + idx)
          .top__block-photo
            div
              img(src="./img/" + topData[idx].imgName + ".png" srcset="./img/" + topData[idx].imgName + "@2x.png 2x" alt="" title="")

          .top__block-content
            div
              .top__block-num
                span!= topData[idx].num

            div
              .top__block-header
                div
                  p!= topData[idx].name

                div
                  .top__block-badge
                    a.comments__btn-like(href="#" class="" title="")
                      i.icon-font.icon-like
                      span!= "525"
                    a.comments__btn-dislike(href="#" class="" title="")
                      i.icon-font.icon-dislike
                      span!= "211"

              .top__block-desc
                p!= topData[idx].desc

// SECTION top :: END