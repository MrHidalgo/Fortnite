section#top.top.sidebar

  .top__figure.sidebar__figure
    img(src="./img/img-top-figure-0.svg" alt="" title="")
    img(src="./img/img-top-figure-1.svg" alt="" title="")

  .top__title
    h3!= "Top 5 Skins"

  .top__wrapper.sidebar__wrapper
    .top__block-wrapper

      each val, idx in topData
        a.top__block(href='#' class!= 'top__block-' + idx)
          .top__block-photo
            div
              img(src="./img/img-avatar-ts.png" srcset="./img/img-avatar-ts@2x.png 2x" alt="" title="")

          .top__block-content
            div
              .top__block-num
                span!= topData[idx].num

            div
              .top__block-header
                div
                  h4!= topData[idx].name

                div
                  .top__block-badge
                    span.comments__btn-like(class="" title="")
                      i.icon-font.icon-like
                      span!= "525"
                    span.comments__btn-dislike(class="" title="")
                      i.icon-font.icon-dislike
                      span!= "211"

              .top__block-desc
                p!= topData[idx].desc

