// SECTION popular :: START

section#popular.popular

  .popular__bg

  .popular__wrapper

    .popular__head
      p!= "Popular Items"

    .popular__body
      -for(var i = 0; i < 5; i++)
        div
          .b-skin.b-skin--small(
          class!= (i === 0) ? "b-skin--epic": (i === 1) ? 'b-skin--rare': (i === 2) ? 'b-skin--legendary': (i === 3) ? 'b-skin--uncommon': 'b-skin--rare'
          )
            img(src="./img/img-avatar-ts.png" srcset="./img/img-avatar-ts@2x.png 2x" alt="" title="")

            .b-skin__points
              img(src="./img/img-skin-points.png" srcset="./img/img-skin-points@2x.png 2x" alt="" title="")
              span!= "1500"

            .b-skin__view
              .e-skin__block-view
                i.icon-font.icon-cube
                span!= "3d"

            .b-skin__info
              p!= "Skin Name"

    .popular__footer
      a.c-btn.c-btn--bg(href="#" class="" title="")!= "All Items <span>></span>"

// SECTION popular :: END