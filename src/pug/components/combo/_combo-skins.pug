// SECTION combo-skins :: START

-
  var combosBlock = [
    {
      classMod: 'legendary',
      iconName: 'outfit',
    },
    {
      classMod: 'epic',
      iconName: 'backBling',
    },
    {
      classMod: 'rare',
      iconName: 'harvestingTool',
    },
    {
      classMod: 'uncommon',
      iconName: 'skydivingTrails',
    },
    {
      classMod: 'default',
      iconName: 'emoticon',
    },
  ];

section.combo
  .combo__skins

    .combo__skins-wrapper
       each val, id in [1,2,3,4,5,6]
        div
          .combos__box

            .combos__box-bg
            .combos__box-triangle
              img(src="./img/img-combosnin-triangle-0.svg" srcset="" alt="" title="")
              img(src="./img/img-combosnin-triangle-1.svg" srcset="" alt="" title="")
              img(src="./img/img-combosnin-triangle-2.svg" srcset="" alt="" title="")
              img(src="./img/img-combosnin-triangle-3.svg" srcset="" alt="" title="")
              img(src="./img/img-combosnin-triangle-4.svg" srcset="" alt="" title="")

            .combos__box-wrapper.combos__box-wrapper-0
              .combos__box-left
                img(src="./img/img-combosbox-0.png" srcset="./img/img-combosbox-0@2x.png 2x" alt="" title="")

                .combos__box-title
                  .combos__box-title--bg
                  .combos__box-title--triangle
                    img(src="./img/img-combostitle-triangle-0.svg" alt="" title="")
                    img(src="./img/img-combostitle-triangle-1.svg" alt="" title="")
                    img(src="./img/img-combostitle-triangle-2.svg" alt="" title="")
                    img(src="./img/img-combostitle-triangle-3.svg" alt="" title="")
                  p!= "Skin Name Here"

                .e-skin__block-points
                  img(src="./img/img-skin-points-medium.png" srcset="./img/img-skin-points-medium@2x.png 2x" alt="" title="")
                  span!= "1500"

              .combos__box-right

                each val, idx in combosBlock
                  div
                    a.combos__block(href="#" class!= "combos__block-" + idx + ' combos__block--' + combosBlock[idx].classMod)
                      .combos__block-top
                        .combos__block-badge
                          i.icon-png(class!= combosBlock[idx].iconName)

                        img(src="./img/img-combos-0.png" srcset="./img/img-combos-0@2x.png 2x" alt="" title="")

                      .combos__block-bottom
                        if(idx === 0)
                          .b-skin__info--ticker
                            p!= "SKIN NAME"
                        else
                          .b-skin__info--wticker
                            p!= "SKIN NAME"

                        .e-skin__block-points
                          img(src="./img/img-skin-points.png" srcset="./img/img-skin-points@2x.png 2x" alt="" title="")
                          span!= "1500"

            .combos__box-wrapper.combos__box-wrapper-1
              .combos__box-bottom
                .combos__box-total
                  .combos__box-total--bg

                  p!= "Total price:"
                  .e-skin__block-points
                    img(src="./img/img-skin-points-medium.png" srcset="./img/img-skin-points-medium@2x.png 2x" alt="" title="")
                    span!= "12,000"

                .combos__box-like
                  .combos__box-like--bg

                  span.comments__btn-like(class="" title="")
                    i.icon-font.icon-like
                    span!= "525"
                  span.comments__btn-dislike(class="" title="")
                    i.icon-font.icon-dislike
                    span!= "211"

