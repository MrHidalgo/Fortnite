-
  var combosBlock = [
    {
      classMod: 'custom',
      iconName: 'outfit',
    },
    {
      classMod: 'custom',
      iconName: 'backBling',
    },
    {
      classMod: 'custom',
      iconName: 'harvestingTool',
    },
    {
      classMod: 'custom',
      iconName: 'skydivingTrails',
    },
    {
      classMod: 'custom',
      iconName: 'emoticon',
    },
  ];

section.combo.combo__custom.combo--custom

  .section-resize(section-resize-js)
    .section-resize-bg
    .section-resize-triangle
      img(src="./img/img-combo-custom-triangle-0.svg" alt="" title="")
      img(src="./img/img-combo-custom-triangle-1.svg" alt="" title="")
      img(src="./img/img-combo-custom-triangle-2.svg" alt="" title="")
      img(src="./img/img-combo-custom-triangle-3.svg" alt="" title="")
      img(src="./img/img-combo-custom-triangle-4.svg" alt="" title="")
      img(src="./img/img-combo-custom-triangle-5.svg" alt="" title="")

  .combo__custom-wrapper

    .combo__custom-title
      i.icon-font.icon-paint
      h2!= "Create Your Custom Combo"

    .combos__box

      .combos__box-wrapper
        .combos__box-left

          a.combos__block.combos__block--custom(href="#" data-combos-id="1" data-name="combos__block" combo-drop-btn-js)
            .combos__block-top
              img(src="" srcset="" alt="" title="" combo-custom-img-js)

              span
                i.icon-font.icon-plus-add

              .combos__block-close(combo-remove-skin-js)
                i.icon-font.icon-close

          .combos__box-title(data-name="combos__box" combo-custom-title-js)
            .combos__box-title--bg
            .combos__box-title--triangle
              img(src="./img/img-combostitle-triangle-1.svg" alt="" title="")
              img(src="./img/img-combostitle-triangle-2.svg" alt="" title="")
            h3!= "Skin"

        .combos__box-right(combo-custom-skinAdditional-js)

          each val, idx in combosBlock
            div
              a.combos__block(combo-drop-btn-js data-id!=idx data-combos-id=(idx + 2) data-name="combos__block" href="#" class!= "combos__block-" + idx + ' combos__block--' + combosBlock[idx].classMod)
                .combos__block-top
                  img(src="" srcset="" alt="" title="" combo-custom-img-js)

                  span
                    i.icon-font.icon-plus-add

                  .combos__block-close(combo-remove-skin-js)
                    i.icon-font.icon-close

                .combos__block-bottom
                  if(idx === 0)
                    .b-skin__info--ticker
                      h3!= "SKIN NAME"
                  else
                    .b-skin__info--wticker
                      h3!= "SKIN NAME"

      .combos__box-wrapper
        .combos__box-bottom

          a.c-btn.c-btn--bg.is-disabled(href="#" combo-custom-preview-js data-btn-name='preview' class="" title="")!= "Preview <i class='icon-font icon-arr-dcc'></i>"
          a.c-btn.c-btn--bg.is-disabled(href="#" combo-custom-screenshot-js data-btn-name='screenshot' class="" title="")!= "<i class='icon-font icon-saves'></i> Save Screenshot"

// SECTION :: END